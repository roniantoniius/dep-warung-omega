    {% extends "base.html" %}

    {% block title %}Warung Omega - Produk Seafood{% endblock %}

    {% block content %}

    <!-- products content -->
    <div class="bg-main">
        <div class="container">
            <div class="box">
                <div class="breadcumb">
                    <a href="/">home</a>
                    <span><i class='bx bxs-chevrons-right'></i></span>
                    <a href="/products-page">all products</a>
                </div>
            </div>
        
            <div class="box">
                <div class="row">
                    <!-- Sidebar Filter -->
                    <div class="col-3 filter-col" id="filter-col">
                        <div class="box filter-toggle-box">
                            <button class="btn-flat btn-hover" id="filter-close">close</button>
                        </div>
                        <div class="box">
                            <span class="filter-header">
                                Categories
                            </span>
                            <ul class="filter-list">
                                <li><a href="/products-page">All Categories</a></li>
                                {% for category in categories %}
                                <li>
                                    <a href="/products-page?id_category={{ category.id_category }}">{{ category.category_name }}</a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                
                    <!-- Product Grid -->
                    <div class="col-9 col-md-12">
                        <div class="box filter-toggle-box">
                            <button class="btn-flat btn-hover" id="filter-toggle">filter</button>
                        </div>
                        <div class="box">
                            <div class="row" id="products">
                                {% for product in products %}
                                <div class="col-4 col-md-12 col-sm-12">
                                    <div class="product-card">
                                        <div class="product-card-img">
                                            <img src="/static/images/{{ product.product_image }}" alt="{{ product.name }}">
                                        </div>
                                        <div class="product-card-info">
                                            <div class="product-btn">
                                                <a href="/products-detail/{{ product.id }}">
                                                    <button class="btn-flat btn-hover btn-shop-now">pesan</button>
                                                </a>
                                                <button class="btn-flat btn-hover btn-cart-add">
                                                    <i class='bx bxs-cart-add'></i>
                                                </button>
                                                <button class="btn-flat btn-hover btn-cart-add">
                                                    <i class='bx bxs-heart'></i>
                                                </button>
                                            </div>
                                            <div class="product-card-name">
                                                <h4>{{ product.name }}</h4>
                                            </div>
                                            <br>
                                            <div class="product-card-price">
                                                <span class="curr-price">Rp {{ product.new_price }} <span>{{ product.harga_note }}</span></span>
                                            </div>

                                            <div style="display: inline-block;">
                                                <br>
                                                <p style="display: inline;">Rp <del>{{ product.original_price }}</del></p>
                                                <p style="background-color: #f99090; border-radius: 5px; padding: 5px; color: black; display: inline;">{{ product.percentage_discount }}%</p>
                                            </div>
                                            
                                            <br>                                         
                                            <br>
                                            <p>{{ product.lokasi }}</p>
                                            <h4>{{ product.produk_note }}</h4>
                                        </div>
                                    </div>
                                </div>
                                {% if loop.index % 3 == 0 %}
                                    </div><div class="row">
                                {% endif %}
                                {% endfor %}
                            </div>
                        </div>
                    
                        <!-- Pagination -->
                        <div class="box">
                            <ul class="pagination">
                                <li><a href="?page={{ page - 1 }}{% if selected_category %}&id_category={{ selected_category }}{% endif %}" {% if page <= 1 %}class="disabled"{% endif %}><i class='bx bxs-chevron-left'></i></a></li>
                                {% for p in range(1, total_pages + 1) %}
                                <li><a href="?page={{ p }}{% if selected_category %}&id_category={{ selected_category }}{% endif %}" {% if page == p %}class="active"{% endif %}>{{ p }}</a></li>
                                {% endfor %}
                                <li><a href="?page={{ page + 1 }}{% if selected_category %}&id_category={{ selected_category }}{% endif %}" {% if page >= total_pages %}class="disabled"{% endif %}><i class='bx bxs-chevron-right'></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end products content -->

    {% endblock %}